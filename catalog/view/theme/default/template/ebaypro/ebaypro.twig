          <h1>{{ heading_title }}</h1>
          {% if review_status %}
          <div class="stars-box">
            <div class="rating">
              {% for i in 1..5 %}
              {% if rating < i %}
              <span class="fa fa-stack"><i class="fa fa-star off fa-stack-1x"></i></span>
              {% else %}
              <span class="fa fa-stack"><i class="fa fa-star off fa-stack-1x"></i><i class="fa fa-star fa-stack-1x"></i></span>
              {% endif %}
              {% endfor %}
