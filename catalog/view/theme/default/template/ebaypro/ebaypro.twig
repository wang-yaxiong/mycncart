            {% if not special %}
              <h2>{{ price }}</h2>
            {% else %}
              <span class="price-new">{{ special }}</span>
              <span class="price-old" style="text-decoration: line-through;">{{ price }}</span>
            {% endif %}
            {% if points %}
              <span class="points">{{ text_points }} {{ points }}</span>
            {% endif %}
